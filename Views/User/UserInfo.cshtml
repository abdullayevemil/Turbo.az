@model IEnumerable<Claim>

@{
    ViewData["Title"] = "User Info";

    var claimTypes = new Dictionary<string, string>
    {
        {ClaimTypes.Name , "Login"},
        {ClaimTypes.Email , "Email adress"},
        {ClaimTypes.MobilePhone, "Mobile Phone"}
    };
}

<div class="text-center user-info">
    User information:
    <br>
    <br>
    @foreach (var claim in Model)
    {
        @if (claimTypes.Keys.Contains<string>(claim.Type))
        {
            <div>
                <label>@claimTypes[@claim.Type]</label>:
                <label>@claim.Value</label>
            </div>
            <br>
        }
    }
    <br>
    <a class="link" asp-controller="Identity" asp-action="ChangePassword">
        <i class="fa fa-edit" style="font-size:24px"></i>
        Change password
    </a>
</div>

<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>