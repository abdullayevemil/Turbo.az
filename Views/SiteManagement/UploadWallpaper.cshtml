@{
    ViewData["Title"] = "Wallpaper uploading";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3">
    <label class="form-label">Select wallpaper of the site: </label>
    <br>
    <form enctype="multipart/form-data" id="file-form" method="post">
        <input name="file" id="file" type="file" accept="image/jpeg" class="form-control">
        <br>
        <button id="file-upload-submit" type="submit" class="btn submit-button">Confirm file</button>
        <br>
    </form>
</div>
