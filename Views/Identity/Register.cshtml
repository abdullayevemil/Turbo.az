@{
    ViewData["Title"] = "Register";

    string email = string.Empty;
    string login = string.Empty;
    string password = string.Empty;
    string phoneNumber = string.Empty;
}

<link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css'>
<link rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Poppins&amp;display=swap'>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<div class="wrapper main-info">
    <div class="login-box">
        <div class="login-header">
            <span>@ViewData["Title"]</span>
        </div>

        <form asp-action="Register" method="post">
            <div class="input-box">
                <input asp-for="@email" type="email" class="input-field" required>
                <label asp-for="@email" class="label">Email</label>
            </div>

            <div class="input-box">
                <input asp-for="@phoneNumber" type="tel" class="input-field" required
                pattern="(+994) [0-9]{2}-[0-9]{3}-[0-9]{2}-[0-9]{2}" placeholder="(+994) 055-555-55-55">
                <label asp-for="@phoneNumber" class="label">Phone number</label>
            </div>

            <div class="input-box">
                <input asp-for="@login" type="text" class="input-field" required>
                <label asp-for="@login" class="label">Login</label>
                <i class="bx bx-user icon"></i>
            </div>

            <div class="input-box">
                <input id="pass" asp-for="@password" type="password" class="input-field" autocomplete="off" required>
                <label asp-for="@password" class="label">Password</label>
                <i class="bx bx-lock-alt icon" id="show-password"></i>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="input-box">
                <button type="submit" class="input-submit">Create Account</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}