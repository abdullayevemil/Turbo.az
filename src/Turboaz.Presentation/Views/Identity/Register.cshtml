@{
    ViewData["Title"] = "Register";

    string email = string.Empty;
    string surname = string.Empty;
    string photo = string.Empty;
    string login = string.Empty;
    string password = string.Empty;
    string phoneNumber = string.Empty;
}

<link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css'>
<link rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Poppins&amp;display=swap'>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<div class="wrapper">
    <div class="login-box">
        <div class="login-header">
            <span>@ViewData["Title"]</span>
        </div>

        <form enctype="multipart/form-data" method="post" asp-action="Register">
            <div class="register">
                <div>
                    <div class="input-box">
                        <input asp-for="@email" type="email" class="input-field" required>
                        <label asp-for="@email" class="label">Email</label>
                    </div>

                    <div class="input-box">
                        <input asp-for="@login" type="text" class="input-field" required>
                        <label asp-for="@login" class="label">Username</label>
                        <i class="bx bx-user icon"></i>
                    </div>

                    <div class="input-box">
                        <input asp-for="@surname" type="text" class="input-field" autocomplete="off" required>
                        <label asp-for="@surname" class="label">Surname</label>
                    </div>
                </div>

                <div>
                    <div class="input-box">
                        <input asp-for="@phoneNumber" id="phone" type="tel" class="input-field" pattern="[0-9]{3}-[0-9]{3}-[0-9]{2}-[0-9]{2}" placeHolder="099-999-99-99" required>
                        <label asp-for="@phoneNumber" class="label">Phone number</label>
                    </div>

                    <div class="input-box">
                        <input id="pass" asp-for="@password" type="password" class="input-field" autocomplete="off" required>
                        <label asp-for="@password" class="label">Password</label>
                        <i class="bx bx-lock-alt icon" id="show-password"></i>
                    </div>

                    <div class="input-box">
                        <input type="file" name="file" id="file" asp-for="@photo" class="file form-control custom-file-input" accept="image/*" required>
                        <label asp-for="@photo" class="label form-label">Profile photo</label>
                    </div>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger text-center"></div>
            
            <div class="input-box">
                <button type="submit" class="input-submit">Create Account</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/phone-number-validation.js"></script>
}